<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="realEstateModel"
            type="com.example.retrofitassignment.model.RealEstateModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPropertyImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_layout_image_height"
            android:padding="@dimen/sample_padding"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_img" />

        <TextView
            android:id="@+id/tvPropertyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sample_padding"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            tools:text="For Sale" />

        <TextView
            android:id="@+id/tvPropertyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sample_padding"
            android:textSize="@dimen/normal_text_size"
            tools:text="$450 000" />

        <TextView
            android:id="@+id/tvPropertyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sample_padding"
            android:textSize="@dimen/normal_text_size"
            tools:text="Property ID: 424905" />

    </LinearLayout>
</layout>